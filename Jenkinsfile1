pipeline {
  agent any

  tools {
    // Maven tool configured in Jenkins
    maven "mymaven1"
  }

  environment {
    IMAGE_NAME = "saigowtham2605/financeme1:1.0"
  }

  stages {

    stage('Build') {
      steps {
        git url: 'https://github.com/Gautirockz/star-agile-banking-finance.git', branch: 'master'
        sh "mvn -Dmaven.test.failure.ignore=true clean package"
      }
    }

    stage('Create Docker Image') {
      steps {
        sh 'docker build -t $IMAGE_NAME .'
      }
    }

    stage('Docker Login') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockercreds', passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
          sh '''
            echo "ğŸ” Logging in to Docker Hub..."
            echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
          '''
        }
      }
    }

    stage('Push Image') {
      steps {
        sh 'docker push $IMAGE_NAME'
      }
    }

    stage('Config & Deployment') {
      steps {
        withCredentials([
          [$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'awsid1'],
          file(credentialsId: 'ec2-ssh-key', variable: 'PEM')
        ]) {
          sh '''
            set -e
            echo "ğŸ”‘ Injected PEM from Jenkins:"
            ls -l $PEM
            chmod 600 $PEM

            echo "âœ… Checking AWS identity..."
            aws sts get-caller-identity --region us-east-1

            echo "ğŸ“‚ Copying PEM file into terraform-files directory..."
            cp "$PEM" terraform-files/saijenkins1.pem

            # ğŸ”§ Fix permissions for PEM file so Jenkins/Terraform can read it
            echo "ğŸ”§ Fixing permissions for PEM..."
            chmod 600 terraform-files/saijenkins1.pem || true
            chown jenkins:jenkins terraform-files/saijenkins1.pem || true

            cd terraform-files
            terraform init -input=false
            terraform validate

            echo "ğŸ§¹ Cleaning up any existing instance..."
            terraform destroy --auto-approve -var "private_key_path=saijenkins1.pem" || true

            echo "ğŸš€ Creating new EC2 instance..."
            terraform apply --auto-approve -var "private_key_path=saijenkins1.pem"

            echo "ğŸŒ Fetching instance public IP..."
            terraform output public_ip || true
echo "ğŸŒ Testing connectivity to new EC2 instance..."
sh '''
  EC2_IP=$(terraform output -raw public_ip)
  echo "EC2 Public IP: $EC2_IP"
  echo "ğŸ” Checking SSH (port 22)..."
  nc -zv $EC2_IP 22 || true
  echo "ğŸŒ Checking HTTP (port 80)..."
  nc -zv $EC2_IP 80 || true
  echo "âœ… Connectivity test finished."
'''
echo "âœ… Deployment completed successfully!"
          '''
        }
      }
    }
  }

  post {
    success {
      echo "ğŸ‰ Pipeline executed successfully!"
    }
    failure {
      echo "âŒ Pipeline failed â€” check the logs for details."
    }
  }
}
