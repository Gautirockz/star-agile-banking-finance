pipeline {
  agent any

  tools {
    maven "mymaven1"
  }

  environment {
    IMAGE_NAME = "saigowtham2605/financeme1:1.0"
    AWS_DEFAULT_REGION = "us-east-1"
  }

  stages {

    stage('Build') {
      steps {
        git url: 'https://github.com/Gautirockz/star-agile-banking-finance.git', branch: 'master'
        sh "mvn -Dmaven.test.failure.ignore=true clean package"
      }
    }

      stage('Config & Deployment') {
            steps {
                
                withCredentials([aws(accessKeyVariable: 'AWS_ACCESS_KEY_ID', credentialsId: 'AWS-ID', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    dir('terraform-files') {
                    sh 'sudo chmod 600 saijenkins1.pem'
                    sh 'terraform init'
                    sh 'terraform validate'
                    sh 'terraform apply --auto-approve'
}
    }
}
}
}
}
