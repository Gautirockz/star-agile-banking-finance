pipeline {
  agent any

  tools {
    maven "mymaven1"
  }

  environment {
    IMAGE_NAME = "saigowtham2605/financeme1:1.0"
    AWS_DEFAULT_REGION = "us-east-1"
  }

  stages {

    stage('Build') {
      steps {
        git url: 'https://github.com/Gautirockz/star-agile-banking-finance.git', branch: 'master'
        sh "mvn -Dmaven.test.failure.ignore=true clean package"
      }
    }
stage('Docker Login') {
  steps {
    withCredentials([
      usernamePassword(
        credentialsId: 'dockercreds',      
        passwordVariable: 'DOCKER_PASS',
        usernameVariable: 'DOCKER_USER'
      )
    ]) {
      sh '''
        echo "üîê Logging in to Docker Hub..."
        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
      '''
    }
  }
}

       stage('Push-Image') {
           steps {
               sh 'docker push  saigowtham2605/financeme1:1.0 '
                     }
                }
       stage('Config & Deployment') {
            steps {
                
                withCredentials([aws(accessKeyVariable: 'AWS_ACCESS_KEY_ID', credentialsId: 'awsid1', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    dir('terraform-files') {
                    sh 'sudo chmod 600 mykey.pem'
                    sh 'terraform init'
                    sh 'terraform validate'
                    sh 'terraform apply --auto-approve'
}
    }
}
}
}
}
     
